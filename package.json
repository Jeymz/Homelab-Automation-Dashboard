{
  "name": "homelab-automation-dashboard",
  "version": "1.0.0",
  "description": "A collection of homelab automation scripts and web dashboard to manage homelab tasks.",
  "main": "index.js",
  "engine": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "nodemon src/server.js",
    "lint": "npm run lint:eslint && npm run lint:markdown",
    "lint:markdown": "markdownlint .",
    "lint:eslint": "eslint .",
    "lint:fix": "npm run lint:eslint:fix && npm run lint:markdown:fix",
    "lint:markdown:fix": "markdownlint --fix .",
    "lint:eslint:fix": "eslint . --fix",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://git.robotti.io/Robotti/homelab-automation-dashboard.git"
  },
  "keywords": [
    "homelab",
    "automation",
    "dashboard",
    "robotti",
    "scripts",
    "gitlab",
    "github"
  ],
  "author": "Robotti Tech Services",
  "license": "ISC",
  "dependencies": {
    "@azure/arm-dns": "^5.1.0",
    "@azure/identity": "^4.10.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "amqplib": "^0.10.8",
    "axios": "^1.11.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "helmet": "^7.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.13.1",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "markdownlint-cli": "^0.45.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "public/"
    ],
    "ext": "js,json,css,jpg,png,jpeg,gif,svg,scss,jsx,html,mjs"
  }
}
